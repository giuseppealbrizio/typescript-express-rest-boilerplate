{
  "name": "express-service-template",
  "version": "1.0.0",
  "description": "Express microservice template",
  "main": "src/app.ts",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start:prod": "npm run prod",
    "prod": "cross-env NODE_ENV=production npm-run-all build server",
    "build": "npm run clean && tsc",
    "watch": "tsc -w",
    "server": "node ./dist/bin/server",
    "clean": "rimraf dist",
    "start:dev": "cross-env NODE_ENV=development nodemon ./src/bin/server",
    "lint": "eslint --ignore-path .gitignore --ext .ts .",
    "lint-and-fix": "eslint --ignore-path .gitignore --ext .ts --fix .",
    "prettier-format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": {
    "name": "Giuseppe Albrizio",
    "email": "g.albrizio@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "connect-mongo": "^4.6.0",
    "debug": "^4.3.3",
    "express": "^4.17.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/debug": "^4.1.7",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
