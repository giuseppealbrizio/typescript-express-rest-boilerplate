{
  "name": "typescript-rest-boilerplate",
  "version": "1.0.0",
  "description": "Typescript REST microservice boilerplate using node.js and express and some other cool stuff",
  "main": "src/app.ts",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start:prod": "npm run prod",
    "prod": "cross-env NODE_ENV=production npm-run-all build server",
    "build": "npm run clean && tsc",
    "watch": "tsc -w",
    "server": "node ./build/bin/server",
    "clean": "rimraf build",
    "start:dev": "cross-env NODE_ENV=development nodemon ./src/bin/server",
    "lint": "eslint --ignore-path .gitignore --ext .ts .",
    "lint:fix": "eslint --ignore-path .gitignore --ext .ts --fix .",
    "prettier:check": "prettier --ignore-path .gitignore --check \"**/*.+(js|ts|json)\"",
    "prettier:format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "cross-env NODE_ENV=test jest --verbose"
  },
  "author": {
    "name": "Giuseppe Albrizio",
    "email": "g.albrizio@gmail.com"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "mongodb",
    "mongoose",
    "ecma",
    "REST",
    "API",
    "boilerplate",
    "generator",
    "starter project",
    "eslint",
    "jest",
    "sendgrid",
    "test",
    "tsc",
    "typescript",
    "jest",
    "boilerplate"
  ],
  "license": "MIT",
  "dependencies": {
    "@google-cloud/pubsub": "^2.19.0",
    "@google-cloud/storage": "^5.18.2",
    "@sendgrid/helpers": "^7.6.0",
    "@sendgrid/mail": "^7.6.1",
    "axios": "^0.26.0",
    "bcryptjs": "^2.4.3",
    "clean-deep": "^3.4.0",
    "compression": "^1.7.4",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "^4.3.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-mongo-sanitize": "^2.2.0",
    "express-session": "^1.17.2",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.2.3",
    "mongoose-delete": "^0.5.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "multer-cloud-storage": "^2.8.0",
    "mysql2": "^2.3.3",
    "npm-run-all": "^4.1.5",
    "passport": "^0.5.2",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "slugify": "^1.6.5",
    "swagger-ui-express": "^4.3.0",
    "twilio": "^3.74.0",
    "validator": "^13.7.0",
    "winston": "^3.6.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.178",
    "@types/mongoose-delete": "^0.5.8",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/passport": "^1.0.7",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
